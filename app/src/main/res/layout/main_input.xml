<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="3"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shooting"
        android:textSize="40dp"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="top|right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miss:"
        android:textSize="@dimen/text_large"
        android:layout_row="0"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <RatingBar
        android:id="@+id/missedShots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 1:"
        android:textSize="@dimen/text_large"
        android:layout_row="1"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <RatingBar
        android:id="@+id/level1Shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 2:"
        android:textSize="@dimen/text_large"
        android:layout_row="2"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <RatingBar
        android:id="@+id/level2Shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level 3:"
        android:textSize="@dimen/text_large"
        android:layout_row="3"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <RatingBar
        android:id="@+id/level3Shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />

    <!--just a spacer-->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Failed:"
        android:textSize="@dimen/text_large"
        android:layout_row="5"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup"
        android:textSize="40dp"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="top|right"/>

    <RatingBar
        android:id="@+id/missedPickups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup:"
        android:textSize="@dimen/text_large"
        android:layout_row="6"
        android:layout_column="0"
        android:paddingRight="20dp" />

    <RatingBar
        android:id="@+id/pickups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:numStars="5"
        android:progressDrawable="@drawable/circleratingbar"
        android:stepSize="1" />

</GridLayout>